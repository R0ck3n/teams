{% extends 'base.html.twig' %}

{% block title %}Teams Builder{% endblock %}

{% block body %}
    <h1>Teams Builder</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ team.name }}</td>
                <td>{{ team.createdAt ? team.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="d-flex">
                    <a href="{{ path('app_teams_show', {'id': team.id}) }}">voir plus</a>
                    <a href="{{ path('app_teams_edit', {'id': team.id}) }}">Modifier</a>
                    <a href="{{ path('app_teams_delete', {'id': team.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune Équipe encore crée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_teams_new') }}">Create new</a>
{% endblock %}
